# Database Configuration
MONGO_URI=mongodb://localhost:27017/property-registration

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=30d

# Server Configuration
NODE_ENV=production
PORT=5000

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://your-frontend-domain.vercel.app
BACKEND_URL=https://your-backend-domain.vercel.app

# Chapa Payment Configuration
CHAPA_SECRET_KEY=your-chapa-secret-key-here
CHAPA_PUBLIC_KEY=your-chapa-public-key-here
CHAPA_BASE_URL=https://api.chapa.co/v1
CHAPA_WEBHOOK_SECRET=your-chapa-webhook-secret-here

# Cloudinary Configuration (Required for file uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# Admin User Configuration
ADMIN_EMAIL=admin@propertyregistration.com
ADMIN_PASSWORD=admin123456
